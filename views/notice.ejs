  <body>
    <div class="publish" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
        <div class="pub-con">
            <div class="pub-wrap">
                <div class="pub-editor">
                    <form class="publish_form" method="post" action="/group/notice">
                        <textarea spellcheck="false" class="editor" placeholder="写下你的公告，10-700个字" name="groupNotice" maxlength="700" minlength="10"></textarea>
                        <input type="hidden" name="username" value="<%= username %>">
                    </form>
                </div>
                <ul class="pub-type">
                    <li class="pub-btn "> <button class="pub-publish">发表</button> <!--<button class="pub-cancel">关闭</button>--> </li>
                </ul>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(".pub-publish").click(function(){
            if($('.editor').val().length<=0){
                alert("不能什么都不写哦");
            }else{
                $('.publish_form').submit();
            }
        });
    </script>
  </body>
